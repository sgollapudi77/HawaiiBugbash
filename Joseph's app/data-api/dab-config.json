{
  "$schema": "../schemas/hawaii.draft-01.schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "options": {
      "database": "mydb",
      "container": "joslin2",
      "schema": "staticwebapp.database.schema.gql"
    },
    "connection-string": "AccountEndpoint=https://hawaii-testing-cosmos.documents.azure.com:443/;AccountKey=Fdjz65CrsSmsXBNpDfwhSz91dWhLHa4JZyZVz6i1UJ3F0MTfrsp6Jf0GJHvHK2vwyuAcLraQWTXEerk9RDDeyQ==;"
  },
  "runtime": {
    "rest": {
      "enabled": false
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true
    },
    "host": {
      "mode": "development",
      "cors": {
        "origins": [ "http://localhost:5000" ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Player": {
      "source": "mydb.joslin2",
      "rest": false,
      "graphql": true,
      "permissions": [
        {
          "role": "anonymous",
          "actions": [ "read" ]
        },
        {
          "role": "authenticated",
          "actions": [ "read" ]
        },
        {
          "role": "contributor",
          "actions": [ "create", "read", "update", "delete" ]
        }
      ]
    }
  }
}
